                android:text="0" />

            <TextView
                android:id="@+id/rscp"
                style="@style/TextAppearance.measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="0" />

            <TextView
                android:id="@+id/ber"
                style="@style/TextAppearance.measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="0" />

            <TextView
                android:id="@+id/rssi"
                style="@style/TextAppearance.measure"
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/ecio"
                style="@style/TextAppearance.measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="0" />

            <TextView
                android:id="@+id/psc"
                style="@style/TextAppearance.measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="0" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>